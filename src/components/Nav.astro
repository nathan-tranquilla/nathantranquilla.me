---
const linkStyles =
  "md:p-0 p-2 cursor-pointer hover:underline hover:text-lime-700 focus:underline focus:text-lime-700 font-semibold underline-offset-4 decoration-2 decoration-lime-700 md:h-fit h-14";

const navLinks = [
  { href: "/", label: "Welcome" },
  { href: "/about", label: "About" },
  { href: "/services", label: "Services" },
  { href: "/blogs", label: "Blog" },
];
---

<nav
  class="mx-auto flex hidden h-full w-full items-center justify-start pl-10 md:block"
>
  <ul class="flex h-full w-full max-w-[300px] items-center justify-around">
    {
      navLinks.map((link) => (
        <li class="flex">
          <a class={linkStyles} href={link.href}>
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
<nav class="flex w-full items-center justify-end self-center md:hidden">
  <input type="checkbox" id="menu-toggle" class="peer hidden" />
  <label
    for="menu-toggle"
    class="flex h-[13.5px] w-[24px] cursor-pointer flex-col justify-between"
  >
    {
      Array(3)
        .fill(null)
        .map(() => (
          <span class="block h-[2px] w-full shrink-0 rounded-xs bg-[#5A5A5A]" />
        ))
    }
  </label>
  <ul
    class="absolute top-[calc(var(--mobile-nav-height)-10px)] right-0 left-0 z-10 hidden h-fit w-full flex-col items-center justify-around bg-white shadow-md peer-checked:flex"
  >
    {
      navLinks.map((link) => (
        <li class="flex">
          <a class={linkStyles} href={link.href}>
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
