---
import Main from "./Main.astro";
import H1 from "../components/HTMLElements/H1.astro";
import Container from "../components/Container.astro";

const { frontmatter } = Astro.props;
---

<style is:global>
  /* Enhanced Headings */
  .blog-post article h3 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: #1e293b; /* slate-800 */
    font-family: var(--font-family-sans);
    font-size: 1.25rem; /* text-xl */
    font-weight: 700; /* font-bold */
    position: relative;
    padding-left: 1rem;
    border-left: 4px solid #365314; /* lime-900 accent */
    padding: 1rem 1rem 1rem 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .blog-post article h3 {
      font-size: 1.5rem; /* md:text-2xl */
    }
  }

  /* Enhanced Paragraphs */
  .blog-post article p {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: #374151; /* gray-700 */
    font-size: 1.1rem;
  }

  /* First paragraph special styling */
  .blog-post article p:first-of-type {
    font-size: 1.2rem;
    font-weight: 500;
    color: #1f2937; /* gray-800 */
    line-height: 1.7;
  }

  /* Enhanced Lists */
  .blog-post article ul {
    margin: 2rem 0;
    padding-left: 1.5rem;
    list-style: none;
  }

  .blog-post article ul li {
    margin-bottom: 0.75rem;
    position: relative;
    padding-left: 1.5rem;
    line-height: 1.7;
    color: #374151;
  }

  .blog-post article ul li::before {
    content: "â–¸";
    color: #365314; /* lime-900 */
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
    font-size: 1.2rem;
  }

  /* Enhanced Images */
  .blog-post article img {
    width: 95vw;
    max-width: 900px;
    margin: 3rem auto;
    display: block;
    border-radius: 1rem;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 10px 20px -8px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;
    content-visibility: auto;
    border: 1px solid #e2e8f0;
  }

  /* Code Blocks Enhancement */
  .blog-post article code {
    background: #f8fafc;
    color: #e11d48;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    font-weight: 600;
    border: 1px solid #e2e8f0;
  }

  /* Blockquotes */
  .blog-post article blockquote {
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-left: 5px solid #365314;
    border-radius: 0 0.5rem 0.5rem 0;
    font-style: italic;
    color: #475569;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  /* Links within content */
  .blog-post article a {
    color: #365314; /* lime-900 */
    text-decoration: underline;
    text-decoration-color: #84cc16; /* lime-400 */
    text-underline-offset: 4px;
    text-decoration-thickness: 2px;
    transition: all 0.2s ease;
  }

  .blog-post article a:hover {
    color: #1a2e05;
    text-decoration-color: #365314;
    background: rgba(132, 204, 22, 0.1);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
  }

  /* Strong text enhancement */
  .blog-post article strong {
    color: #1e293b;
    font-weight: 700;
  }

  /* Enhanced spacing for better readability */
  .blog-post article > * + * {
    margin-top: 1.5rem;
  }

  .blog-post article h3 + p {
    margin-top: 1rem;
  }

  /* Enhanced Blog Post Layout */
  .blog-post {
    min-height: 100vh;
    padding: 2rem 1rem;
  }
</style>
<Main title={`nathantraquilla.me | ${frontmatter.title}`}>
  <Container classes="blog-post w-full max-w-[1000px] mx-auto font-sans">
    <article>
      <section
        class="relative mb-12 overflow-hidden rounded-2xl border-t-4 border-lime-500 bg-gradient-to-br from-slate-800 to-slate-600 p-8 text-white shadow-2xl md:p-12"
      >
        <H1
          classes="text-wrap !text-white !mb-4 !text-3xl md:!text-4xl !font-extrabold !leading-tight drop-shadow-sm"
          >{frontmatter.title}</H1
        >
        <p class="text-lg font-medium tracking-wide !text-white">
          by {frontmatter.author}
        </p>
      </section>
      <section class="blog-body">
        <slot />
      </section>
    </article>
  </Container>
</Main>
